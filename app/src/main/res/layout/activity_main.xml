<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.khangduyle.calculatorv2.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_num1"
        android:textSize="40sp"
        android:textAlignment="viewEnd"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_op"
        android:textSize="20sp"
        android:textAlignment="viewEnd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_num2"
        android:textSize="40sp"
        android:textAlignment="viewEnd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_result"
        android:textSize="50sp"
        android:textAlignment="viewEnd"/>

    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/button_1"
            android:text="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_2"
            android:text="2"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_3"
            android:text="3"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_add"
            android:text="+"
            android:textSize="20sp"/>
    </TableRow>



    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/button_4"
            android:text="4"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_5"
            android:text="5"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_6"
            android:text="6"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_sub"
            android:text="-"
            android:textSize="20sp"/>
    </TableRow>


    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/button_7"
            android:text="7"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_8"
            android:text="8"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_9"
            android:text="9"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_mul"
            android:text="x"
            android:textSize="20sp"/>
    </TableRow>


    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/button_clear"
            android:text="CLEAR"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_0"
            android:text="0"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_equal"
            android:text="="
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_div"
            android:text=":"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/button_slash"
            android:text="/"
            android:textSize="20sp"/>

    </TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_notification"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:textAlignment="viewEnd"/>
</TableLayout>
